        // --- L√ìGICA DE ESTADO ---
        let currentQ = 0;
        let score = 0;
        
        const ui = {
            qText: document.getElementById('question-text'),
            options: document.getElementById('options-grid'),
            feedback: document.getElementById('feedback-area'),
            feedbackText: document.getElementById('feedback-text'),
            next: document.getElementById('next-btn'),
            card: document.getElementById('quiz-card'),
            results: document.getElementById('results-card'),
            idx: document.getElementById('q-idx'),
            bar: document.getElementById('progress-bar'),
            final: document.getElementById('final-score'),
            finalMsg: document.getElementById('final-message'),
            cat: document.getElementById('q-category')
        };

        function startQuiz() {
            currentQ = 0; score = 0; 
            loadQuestion();
        }

        function loadQuestion() {
            const data = quizData[currentQ];
            
            // UI Reset
            ui.feedback.classList.add('hidden');
            ui.next.classList.add('hidden');
            ui.options.innerHTML = '';
            
            // Textos
            ui.cat.innerText = data.cat;
            ui.qText.innerText = data.q;
            ui.idx.innerText = currentQ + 1;
            ui.bar.style.width = `${((currentQ) / quizData.length) * 100}%`;

            // Opciones
            data.opts.forEach((opt, i) => {
                const btn = document.createElement('button');
                btn.className = "btn-option w-full p-4 rounded-xl text-left text-slate-700 font-medium shadow-sm flex items-center justify-between group";
                btn.innerHTML = `<span>${opt}</span><span class="opacity-0 group-hover:opacity-100 transition-opacity text-emerald-600">‚ûú</span>`;
                btn.onclick = () => checkAnswer(i, btn);
                ui.options.appendChild(btn);
            });
        }

        function checkAnswer(i, btn) {
            const data = quizData[currentQ];
            const allBtns = ui.options.querySelectorAll('button');
            
            // Bloquear todos
            allBtns.forEach(b => b.disabled = true);
            
            if(i === data.correct) {
                btn.classList.add('correct');
                score++;
                ui.feedbackText.innerHTML = `<strong class="text-emerald-700">¬°Correcto!</strong> ${data.hint}`;
            } else {
                btn.classList.add('incorrect');
                allBtns[data.correct].classList.add('correct');
                ui.feedbackText.innerHTML = `<strong class="text-red-700">Incorrecto.</strong> ${data.hint}`;
            }
            ui.feedback.classList.remove('hidden');
            ui.next.classList.remove('hidden');
        }

        function nextQuestion() {
            currentQ++;
            if(currentQ < quizData.length) loadQuestion();
            else showResults();
        }

        function showResults() {
            ui.card.classList.add('hidden');
            ui.results.classList.remove('hidden');
            ui.final.innerText = score;
            
            // Mensaje final
            const pct = (score / quizData.length) * 100;
            if(pct >= 90) ui.finalMsg.innerText = "¬°Excelente! Eres un arquitecto de software. üèõÔ∏è";
            else if(pct >= 70) ui.finalMsg.innerText = "Muy bien. Tienes los conceptos claros. üìê";
            else ui.finalMsg.innerText = "Sigue repasando la simbolog√≠a b√°sica. üìö";

            // Gr√°fico
            new Chart(document.getElementById('resultsChart').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Aciertos', 'Fallos'],
                    datasets: [{
                        data: [score, quizData.length - score],
                        backgroundColor: ['#10b981', '#f1f5f9'],
                        borderWidth: 0,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'bottom', labels: { usePointStyle: true } } },
                    cutout: '75%'
                }
            });
        }

        // Iniciar
        startQuiz();
    </script>
